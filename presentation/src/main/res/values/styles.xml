<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>

    </style>

    <style name="AppTheme.NoStatusBar" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!-- START - FONT STYLES -->

    <style name="LightFontTextAppearance">
        <item name="fontFamily">@font/sf_pro_display_light</item>
        <item name="android:fontFamily">@font/sf_pro_display_light</item>
    </style>

    <style name="RegularFontTextAppearance">
        <item name="fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
    </style>

    <style name="MediumFontTextAppearance">
        <item name="fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
    </style>

    <style name="SemiBoldFontTextAppearance">
        <item name="fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
    </style>

    <style name="BoldFontTextAppearance">
        <item name="fontFamily">@font/sf_pro_display_bold</item>
        <item name="android:fontFamily">@font/sf_pro_display_bold</item>
    </style>

    <!-- END - FONT STYLES -->
    <!-- START MAIN TOOLBAR STYLE -->
    <style name="ThemeOverlay.App.Toolbar" parent="">
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
        <item name="titleTextAppearance">@style/TextAppearance.Shrine.Headline6</item>
    </style>

    <style name="ToolbarTextAppearance" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
    </style>

    <style name="TextAppearance.Shrine.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:textSize">18sp</item>
    </style>
    <!-- END MAIN TOOLBAR STYLE -->

</resources>